# Development Environment Variables
# Copy this file to .env and configure with your values

# Environment
NODE_ENV=development

# Firebase Emulator (for local development)
USE_FIREBASE_EMULATOR=true
FIRESTORE_EMULATOR_HOST=localhost:8080

# Firebase Production Configuration (only needed for production)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/serviceAccountKey.json

# Scraper Configuration
SCRAPER_INTERVAL=3600000
SCRAPER_URL=https://www.ikea.com/it/it/circular/second-hand/

# Optional: Notification Configuration
NOTIFICATION_TYPE=webhook
WEBHOOK_URL=https://example.com/webhook

# Email Notification (if using email)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=user@example.com
# EMAIL_PASSWORD=password
# EMAIL_RECIPIENT=recipient@example.com

# Slack Notification (if using slack)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
